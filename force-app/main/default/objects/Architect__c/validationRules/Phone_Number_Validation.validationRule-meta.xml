<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Phone_Number_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>NOT(REGEX(Phone_Number__c, &quot;^[0-9]{10}$&quot;))</errorConditionFormula>
    <errorDisplayField>Phone_Number__c</errorDisplayField>
    <errorMessage>Enter a valid 10-digit phone number.</errorMessage>
</ValidationRule>
